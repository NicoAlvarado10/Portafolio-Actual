---
import Layout from '../layouts/Layout.astro'
import Nav from '../components/nav/Nav.astro'
import Header from "../components/header/Header.astro"
import Skills from "../sections/skills/Skills.astro"
import Projects from "../sections/projects/Projects.astro"
import About from "../sections/about/About.astro"
import Footer from "../components/footer/Footer.astro"
import ProjectComponent from '../components/projectComponent/ProjectComponent.astro'
---
<Layout
    title="Nicolás Alvarado | Frontend Developer"
    description="Nicolás Alvarado, a frontend developer. Explore my projects and discover how I can help you with your next web challenge."
    language="en"
    iconImg='/icon.svg'

>
   <Nav 
    project="Projects" 
    about="About" 
    language="ESP"
    pageLink='/es'
    />
    <Header 
    greets='Frontend'
    firstTitle="I am Nicolás Alvarado"
    firstLetter="A web developer specialized in "
    emphasizedWords="Front-End"
    restOfWords={[", focused on creating visually appealing and functional interfaces. "]}
    resumeLink="/Nicolas Alvarado.CV.pdf"
    resume="My Resume"
    />

    <Skills title="Skills" />
    
    <Projects title="Projects" id='#projects'>
        <ProjectComponent 
            title='NicoUI' 
            image=' /nico-ui.webp' 
            alt='NicoUI website'
            description='NicoUI is a collection of web components designed with Tailwind CSS. Easy to use and customize, adapts to multiple frameworks such as React, Astro, Angular and Vue'
            tecnologies={[ 'Astro', 'Tailwind CSS', 'JavaScript'  ]}
            codeLink='https://github.com/NicoAlvarado10/NicoUI.git'
            website='https://nico-ui.vercel.app/'
            codeBtnText='Repo'
            liveBtnText='Vivo'
        />
        <ProjectComponent 
        title='Rental' 
        image=' /Rental.webp' 
            alt='Rental website'
            description='Industry offering a rental cars'
            tecnologies={[ 'Astro', 'CSS', 'JavaScript' ]}
            codeLink='https://github.com/NicoAlvarado10/rental-landing.git'
            website='https://rental-landing.netlify.app/'
            codeBtnText='Repo'
            liveBtnText='Live'
        />
        <ProjectComponent 
            title='Burger House' 
            image='/Burger-House.webp' 
            alt='Burger-House website'
            description='Landing Page of a burger restaurant'
            tecnologies={[ 'HTML', 'CSS', 'JavaScript' ]}
            codeLink='https://github.com/NicoAlvarado10/Proyecto-Hamburguesa.git'
            website='https://house-burger.netlify.app/'
            codeBtnText='Repo'
            liveBtnText='Live'
        />
        <ProjectComponent 
            title='FitPhysique' 
            image='/Fitphysique.webp' 
            alt='FitPhysique website'
            description='Landing Page of a gym'
            tecnologies={[ 'HTML', 'CSS', 'JavaScript' ]}
            codeLink='https://github.com/NicoAlvarado10/Proyecto-Gym.git'
            website='https://gimnasio-fit.netlify.app/'
            codeBtnText='Repo'
            liveBtnText='Live'
        />
        <ProjectComponent 
            title='BarberTurnero' 
            image='/turnero.webp' 
            alt='BarberTurnero website'
            description='System to schedule, confirm, edit and delete shifts'
            tecnologies={[ 'React', 'CSS MODULES', 'Firebase' ]}
            codeLink='https://github.com/NicoAlvarado10/BarberAgenda.git'
            website='https://barberturnero.netlify.app/'
            codeBtnText='Repo'
            liveBtnText='Vivo'
        />
        <ProjectComponent 
        title='Skywings' 
        image='/skywings.webp'
        alt='skywings website'
        description='Landing Page of an Airline Company'
        tecnologies={[ 'React', 'CSS MODULES', ]}
        codeLink='https://github.com/NicoAlvarado10/SKYWINGS.git'
        website='https://skywings-landing.netlify.app/'
        codeBtnText='Repo'
        liveBtnText='Vivo'
    />
        <ProjectComponent 
            title='FitnessPoint' 
            image='/fitnessPoint.webp'
            alt='FitnessPoint website'
            description='Landing Page of Gym'
            tecnologies={[ 'Astro', 'CSS', 'JavaScript' ]}
            codeLink='https://github.com/NicoAlvarado10/Fitness-Landing.git'
            website='https://fitness-landing-one.vercel.app'
            codeBtnText='Repo'
            liveBtnText='Live'
        />
        <ProjectComponent 
        title='CreaticAgency' 
        image='/creatic-agency.webp'
        alt='CreaticAgency website'
        description='Landing page of a design agency'
        tecnologies={[ 'React', 'Tailwind' ]}
        codeLink='https://github.com/NicoAlvarado10/Creatic-Agency.git'
        website='https://creatic-agency.netlify.app/'
        codeBtnText='Repo'
        liveBtnText='Vivo'
    />
    </Projects>
    
    <About 
    id="#about"
    title="About Me" 
    secondTitle="How I Started Programming"
    paragraphs={ [
      "My first approach to technology was through video games. But when I discovered web development, I leaned towards that side.",
      "Currently, I am studying self-taught through courses, tutorials, and reading documentation. I am committed to continuously expanding my skills and staying updated with the latest industry technologies.",
      "I am excited to apply my programming skills in a professional environment and look forward to the opportunity to be part of a team."
    ] }
    
    />
    <Footer
        created="Created with Astro & Tailwind"
    />
</Layout>
